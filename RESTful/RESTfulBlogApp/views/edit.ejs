<% include ./partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog <%= blog.title %></div>
    <form action="/blogs/<%= blog._id%>?_method=PUT" class="ui form" method="POST">
        <div class="field">
           <label>Title</label> 
           <input type="text" name="blog[title]" value="<%= blog.title %>"> 
        </div>
        <div class = "field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%= blog.image%></textarea>
        </div>
        <input class="ui violet big basic button"type="submit">
    </form>

</div>

<% include ./partials/footer%>